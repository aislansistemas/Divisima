@model CarrinhoCompraViewModel

@if(Model.TotalItems > 0){
    <div class="up-item">
        <div id="icone-carrinho-compra" class="shopping-card">
            <ul class="main-menu-superior">
                <li>
                    <a href="#">
                        <i class="fa fa-shopping-cart"></i><span>@Model.TotalItems</span>
                    </a>
                    <ul class="sub-menu-superior" style="left: -150px !important; width: 270px">
                        @foreach (var item in Model.CarrinhoCompraList)
                        {
                            <li class="li-carrinho-compra-items">
                                <a class="link-dropdown" asp-action="Detalhes" asp-controller="Produto" asp-route-id="@item.Produto.ProdutoId">
                                    <img id="img-item-carrinho-compras" src="~/arquivos/@item.Produto.Foto[0].Foto">
                                    <b class="pl-2" style="position: absolute; top: 5px; font-weight: 600;">
                                        @Functions.GetStringLimitada(item.Produto.Nome, 22)
                                    </b>
                                </a>
                                <b class="pl-2 text-primary" style="position: absolute; left: 96px;top: 50px;font-weight: 600;">@Functions.GetValorMoedaFormatado(@item.Produto.Valor)</b>
                            </li>
                            <hr class="ml-3 mr-3 text-secondary" style="margin-top: -1px">
                        }   
                        <div class="d-flex justify-content-center"> 
                            <a class="btn-estilizado btn-roza text-light" asp-action="Index" asp-controller="CarrinhoCompra">Ir para o Carrinho</a>
                        </div>
                    </ul>
                    
                </li>
            </ul>
        </div>	
    </div>
} else {
    <div class="up-item">
        <div id="icone-carrinho-compra" class="shopping-card">
            <a href="#"><i class="fa fa-shopping-cart"></i><span>0</span></a> 
        </div>	
    </div>
}