@model ProdutoViewModel

@foreach (var produto in @Model.Produtos)
{
    <div class="col-lg-3 col-sm-6">
        <div class="product-item">
            <div class="pi-pic">
                <img src="~/@Functions.GetPathUploadProdutos()/@produto.Foto[0].Foto" alt="">
                <div class="pi-links">
                    <a class="wishlist-btn" title="Ver Detalhes do Produto" asp-action="Detalhes" asp-route-id="@produto.ProdutoId" asp-controller="Produto">
                        <i class="fa fa-eye icone-ver-detalhes"></i>
                    </a>
                </div>
            </div>
            <div class="pi-text">
                <h6>@Functions.GetValorMoedaFormatado(@produto.Valor)</h6>
                <p>@produto.Nome</p>
            </div>
        </div>
    </div>
}